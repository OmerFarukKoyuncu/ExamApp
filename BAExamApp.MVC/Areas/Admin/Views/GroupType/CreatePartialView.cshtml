@model AdminGroupTypeCreateVM

@{
    ViewData["Title"] = "Create";
}

<div class="modal fade" id="createSubjectModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">@SharedLocalizer["Create", ViewLocalizer["Group_Type"]]</h5>
                <button type="button" class="btn btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form asp-controller="GroupType" asp-action="Create" class="form" id="create-branch">
                <div class="modal-body">
                    <div class="row mb-3">
                        <div class="form-floating">
                            <input asp-for="Name" class="form-control form-control-solid mb-3 mb-lg-0" placeholder="@SharedLocalizer["First_Name"]" />
                            <label asp-for="Name" class="required fw-bold fs-6 mb-2 text-muted"></label>
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="form-floating">
                            <textarea asp-for="Information" maxlength="500" style="width:100%; height:150px;" class="form-control form-control-solid mb-3 mb-lg-0" placeholder="@SharedLocalizer["Information"]"></textarea>
                            <label asp-for="Information" class="required fw-bold fs-6 mb-2 text-muted"></label>
                            <span asp-validation-for="Information" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="text-center pb-5">
                    <button type="button" data-bs-dismiss="modal" aria-label="Close" class="btn btn-light me-3">@SharedLocalizer["Back_List"]</button>
                    <button class="btn btn-primary" type="submit">
                        <span class="indicator-label">@SharedLocalizer["Save"]</span>
                        <span class="indicator-progress">
                            @SharedLocalizer["Please_Wait"]
                            <span class="spinner-border spinner-border-sm align-middle ms-2"></span>
                        </span>
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
    document.addEventListener("DOMContentLoaded", function () 
    {
        const input = document.querySelector(
            '#create-branch input'
        );
        const textarea = document.querySelector(
            '#create-branch textarea'
        );

        function checkAndToggleStar(element)
        {
            const parentDiv = element.closest('.form-floating');
            // console.log("parentDiv", parentDiv);
            if (!parentDiv) return;
            const label = parentDiv.querySelector('label');
            if (!label) return;
            if (element.value.trim() === "") {
                label.classList.add("required");
            } else {
                label.classList.remove("required");
            }
        }

        if (input)
        {
            input.addEventListener('input', function () 
            {
                checkAndToggleStar(input);
            });
        }

        if (textarea) {
            textarea.addEventListener('input', function () {
                checkAndToggleStar(textarea);
            });
        }

               
    });
</script>

<script>
    //Form kapandıktan sonra gerekli yerleri sıfırlama
    document.addEventListener("DOMContentLoaded", function () {
        const forms = document.getElementsByClassName('form');
       console.log("Form",forms);
        $('#createSubjectModal').on('hidden.bs.modal', function () {
           forms[0].reset();
            forms[0].querySelectorAll('label').forEach(label => {
                label.classList.add('required');
            });

        });
    });
</script>