@model X.PagedList.IPagedList<AdminStudentListVM>
@using BAExamApp.MVC.Areas.Admin.Models.ApiUserVMs
@using Microsoft.Extensions.Localization
@using X.PagedList
@using X.PagedList.Mvc.Common
@using X.PagedList.Mvc.Core
@using X.PagedList.Mvc.Core.Common
@inject IStringLocalizer<SharedModelResource> localizer

@{
    ViewData["Title"] = ViewLocalizer["Students"];
    var currentPageSize = ViewBag.PageSize ?? 10;
}
<head>

    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
</head>
<style>

    .menu-item {
        text-align: left;
        padding-left: 10px;
    }

    .tooltip-inner {
        max-width: 350px !important;
    }

    #kt_datatable_example_1 tbody td {
        padding: 4px !important;
        vertical-align: middle;
    }

</style>
<div class="card py-4">

    <div class="card-body fs-6 py-15 px-10 py-lg-15 px-lg-15 text-gray-700">
        <!--begin::Card Body-->
        <!--begin::Section-->
        <div class="d-flex justify-content-between">

            <h5 style="display: flex; align-items: center;">
                @SharedLocalizer["List", SharedLocalizer["Student"]]

                <span class="material-symbols-outlined" style="margin-left: 5px; font-size: 130%; "
                      data-bs-toggle="tooltip" data-bs-placement="right"
                      title="@SharedLocalizer["Student_Filter_Warning"]">

                    info

                </span>
            </h5>

            @* Add student butonu *@
            <button id="addStudentBtn" type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#kt_modal_add_user">
                <span class="svg-icon svg-icon-2">
                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none">
                        <rect opacity="0.5" x="11.364" y="20.364" width="16" height="2" rx="1" transform="rotate(-90 11.364 20.364)" fill="currentColor" />
                        <rect x="4.36396" y="11.364" width="16" height="2" rx="1" fill="currentColor" />
                    </svg>
                </span>
                @SharedLocalizer["Create", SharedLocalizer["Student"]]
            </button>
        </div>

        <!--end::Search-->
        <!--begin::Toolbar-->
        <div class="d-flex align-items-center position-relative my-1" data-kt-docs-table-toolbar="base">
            <div class="classroomfilter">
                <div class="row g-5 align-items-center">

                    <div class="col-12 col-md-4 col-lg-3 mb-3">
                        <div class="form-group">
                            <input class="form-control form-control-solid" id="FirstName" name="FirstName"
                                   placeholder="@SharedLocalizer["Student_Name"]" oninput="filterTable()" />
                        </div>
                    </div>

                    <div class="col-12 col-md-4 col-lg-3 mb-3">
                        <div class="form-group">
                            <input class="form-control form-control-solid" type="text" id="LastName" name="LastName"
                                   placeholder="@SharedLocalizer["Student_Surname"]" oninput="filterTable()" />
                        </div>
                    </div>

                    <div class="col-12 col-md-4 col-lg-4 mb-3">
                        <div class="form-group">
                            <input class="form-control form-control-solid" type="text" id="Email" name="Email"
                                   placeholder="@SharedLocalizer["Student_Mail_Adress"]" oninput="filterTable()" />
                        </div>
                    </div>

                    @*  <div class="col-12 col-md-12 col-lg-2 mb-3 d-flex justify-content-start">
                        <button type="submit" id="searchButton" class="btn btn-primary btn-lg w-100 w-md-auto hover-elevate-up" data-kt-user-table-filter="form">
                            @SharedLocalizer["Show"]
                        </button>
                    </div>  *@
                </div>
            </div>
        </div>


        <!--end::Add customer-->
        <!--end::Toolbar-->
        <!--begin::Group actions-->
        <div class="d-flex justify-content-end align-items-center d-none" data-kt-docs-table-toolbar="selected">
            <div class="fw-bolder me-5">
                <span class="me-2" data-kt-docs-table-select="selected_count"></span>Selected
            </div>
            <button type="button" class="btn btn-danger" data-kt-docs-table-select="delete_selected">Selection Action</button>
        </div>
        <!--end::Group actions-->
        <!--end::Wrapper-->
        <!--begin::Datatable-->
        <div id="kt_datatable_example_1_wrapper" class="dataTables_wrapper dt-bootstrap-4 no-footer">
            <div class="table-responsive">
                @if (ViewBag.ShowAllActiveStudents == false)
                {

                }
                else
                {

                    <div class="card-body py-4">
                        <table id="kt_datatable_example_1" class="table align-middle table-row-dashed fs-6 gy-5">
                            <thead>
                                <tr class="text-start text-muted fw-bolder fs-7 text-uppercase gs-0">
                                    <th>@SharedLocalizer["Profile_Image"]</th>
                                    <th>@SharedLocalizer["Student_Name"]</th>
                                    <th>@SharedLocalizer["Student_Surname"]</th>
                                    <th>@SharedLocalizer["Student_Mail_Adress"]</th>
                                    <th class="text-end min-w-100px">@ViewLocalizer["Student_Operations"]</th>
                                </tr>
                            </thead>
                            <tbody class="text-gray-600 fw-bold" id="studentsTableBody">
                                @if (ViewBag.NoResults == true || (Model != null && !Model.Any()))
                                {
                                    <tr>
                                        <td colspan="5" class="text-center py-10">
                                            <div class="d-flex flex-column align-items-center">

                                                <span class="text-gray-500 fs-6 fw-bold">@SharedLocalizer["No_Records_Found"]</span>
                                            </div>
                                        </td>
                                    </tr>
                                }
                                else
                                {
                                    @foreach (var student in Model)
                                    {
                                        <tr style="height: 50px;" data-student-id="@student.Id">
                                            <td>
                                                @if (student.NewImage != null && student.NewImage.Length > 0)
                                                {
                                                    string imageBase64 = Convert.ToBase64String(student.NewImage);
                                                    string imageSrc = $"data:image/png;base64,{imageBase64}";
                                                    <div class="symbol symbol-circle symbol-40px overflow-hidden me-3">
                                                        <div class="symbol-label">
                                                            <img src="@imageSrc" name="Image" alt="Student Image" class="w-100" />
                                                        </div>
                                                    </div>
                                                }
                                                else
                                                {
                                                    <div class="symbol symbol-circle symbol-40px overflow-hidden me-3 text-center">
                                                        <div class="symbol-label">
                                                            <img src="~/images/blank-profile-picture.png" alt="Profil Fotoğrafı Bulunamadı!" class="w-100" />
                                                        </div>
                                                    </div>
                                                }
                                            </td>
                                            <td style="padding: 5px 0;" class="student-firstname">@student.FirstName</td>
                                            <td style="padding: 5px 0;" class="student-lastname">@student.LastName</td>
                                            <td style="padding: 5px 0;" class="student-email">@student.Email</td>
                                            <td class="text-end" style="padding: 5px 0;">
                                                <div class="dropdown">

                                                    <button class="btn btn-light btn-active-light-primary btn-sm dropdown-toggle" type="button" id="dropdownMenuButton" data-bs-toggle="dropdown" aria-extended="false">
                                                        @SharedLocalizer["Options"]
                                                    </button>
                                                    <ul class="dropdown-menu dropdown-menu-end menu-column menu-rounded menu-gray-600 menu-state-bg-light-primary fw-bold fs-7 w-125px py-4" aria-labelledby="dropdownMenuButton">
                                                        <li class="menu-item px-3">
                                                            <a asp-action="Details" asp-route-id="@student.Id" asp-route-page="@ViewBag.PageNumber" asp-route-pageSize="@ViewBag.PageSize" class="menu-link px-3">@SharedLocalizer["Details"]</a>
                                                        </li>
                                                        <li class="menu-item px-3">
                                                            <a id="kt-update-student" onclick="loadStudentData('@student.Id')" data-student-id="@student.Id" data-bs-toggle="modal" data-bs-target="#kt_modal_update_student" class="menu-link px-3" data-kt-users-table-filter="edit_row">@SharedLocalizer["Update"]</a>
                                                        </li>
                                                        <li class="menu-item px-3">
                                                            <a asp-action="StudentSentMails" asp-route-email="@student.Email" class="menu-link px-3">@SharedLocalizer["Email_Content"]</a>
                                                        </li>

                                                    </ul>
                                                </div>
                                            </td>
                                        </tr>
                                    }

                                }
                            </tbody>
                        </table>


                        <div class="d-flex justify-content-between align-items-center flex-wrap">
                            <div class="col-sm-12 col-md-5 d-flex align-items-center justify-content-center justify-content-md-start">
                                <div class="dataTables_length" id="kt_table_users_length">
                                    <label>
                                        <select id="pageSizeDropdown" name="kt_table_users_length" aria-controls="kt_table_users" class="form-select form-select-sm form-select-solid">
                                            <option value="10">10</option>
                                            <option value="25">25</option>
                                            <option value="50">50</option>
                                            <option value="100">100</option>
                                        </select>
                                    </label>
                                </div>

                                <div class="col-5">
                                    <span class="text" style="white-space: nowrap;">
                                        @SharedLocalizer["Total"] <span id="totalCount">@Model.TotalItemCount</span> @SharedLocalizer["From"] <span id="fromCount">@(Model.PageNumber* Model.PageSize - (Model.PageSize - 1))</span>
                                        @SharedLocalizer["To"] <span id="toCount">@(Model.PageNumber* Model.PageSize > Model.TotalItemCount ? Model.TotalItemCount : Model.PageNumber * Model.PageSize)</span>
                                        @SharedLocalizer["Records_Are_Being_Displayed"]
                                    </span>
                                </div>
                            </div>

                            <div class="d-flex justify-content-end mt-3" id="paginationContainer">
                                @Html.PagedListPager(Model, page =>
                                Url.Action("Index", new { page, pageSize = ViewBag.PageSize, showAllActiveStudents = true }),
                                                        new PagedListRenderOptions
                                                        {
                                                            Display = PagedListDisplayMode.Always,
                                                            UlElementClasses = new[] { "pagination", "justify-content-center" },
                                                            LiElementClasses = new[] { "page-item" },
                                                            PageClasses = new[] { "page-link" },
                                                            LinkToFirstPageFormat = @localizer["First"],
                                                            LinkToLastPageFormat = @localizer["Last"],
                                                            ContainerDivClasses = new[] { "d-flex", "justify-content-center" }
                                                        }
                                                        )
                        </div>

                    </div>

                </div>

                                }
            </div>
        </div>

    </div>


</div>

<partial name="~/Areas/Admin/Views/Student/Create.cshtml" model="new AdminStudentCreateVM()"></partial>
<partial name="~/Areas/Admin/Views/Student/Update.cshtml" model="new AdminStudentUpdateVM()"></partial>

@section Scripts {

    <script src="~/newlayouts/src/js/custom/apps/user-management/users/list/add-student.js"></script>
    <script src="~/newlayouts/src/js/custom/apps/user-management/users/view/update-student.js"></script>


    <script src="https://code.jquery.com/ui/1.13.2/jquery-ui.min.js"></script>
    <link rel="stylesheet" href="https://code.jquery.com/ui/1.13.2/themes/base/jquery-ui.css">

    <style>
        /* Autocomplete kutusu */
        .ui-autocomplete {
            background-color: #fff;
            border: 1px solid #dee2e6;
            border-radius: 0.475rem;
            max-height: 250px;
            overflow-y: auto;
            font-size: 14px;
            z-index: 1050 !important;
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.05);
            padding: 0.25rem 0;
        }

        /* Öğe stili */
        .ui-menu-item-wrapper {
            padding: 0.5rem 1rem;
            color: #3f4254;
            font-weight: 500;
            transition: background-color 0.2s;
        }

            /* Hover efekti */
            .ui-menu-item-wrapper.ui-state-active {
                background-color: #009ef7;
                color: #fff;
                border-radius: 0.325rem;
            }

        /* Filtreleme sırasında gizlenen satırlar */
        .filtered-row {
            display: none !important;
        }
    </style>






    <script>
        $(document).ready(function () {
            $('#addStudentBtn').on('click', function () {
                startLoader(); // Yüklenme animasyonunu başlat
                $.ajax({
                    url: '@Url.Action("Create", "Student")',  // GET isteği
                    type: 'GET',
                    success: function (data) {
                        stopLoader(); // Yüklenme animasyonunu durdur
                        // Veriyi modal içeriğine yerleştiriyoruz
                        $('#modalContent').html(data);
                        // Modalı açıyoruz
                        $('#kt_modal_add_user').modal('show');
                    },
                    error: function () {
                        stopLoader(); // Eğer hata olursa animasyonu durdur
                        alert('Bir hata oluştu!');
                    }
                });
            });
        });



        var localizedTexts = {
            unsavedChangesTitle: '@SharedLocalizer["Unsaved_Changes_Title"]',
            unsavedChangesText: '@SharedLocalizer["Unsaved_Changes_Text"]',
            confirmButtonText: '@SharedLocalizer["Yes_Leave"]',
            cancelButtonText: '@SharedLocalizer["No_Stay"]',
            formSubmittedText: '@SharedLocalizer["Form_Submitted_Text"]',
            okButtonText: '@SharedLocalizer["Ok_Button_Text"]',
            ClassroomRequiredText: '@SharedLocalizer["Classroom_Required_Text"]',
            StudentNameRequiredText: '@SharedLocalizer["Student_Name_Required"]',
            StudentSurnameRequiredText: '@SharedLocalizer["Student_Surname_Required"]',
            StudentEmailRequiredText: '@SharedLocalizer["Student_Email_Required"]',
            StudentEmailInvalidText: '@SharedLocalizer["Student_Email_Invalid"]'

        };
        var localizer = {
            emptyTable: '@SharedLocalizer["Empty_Data"]',
            info: '@SharedLocalizer["Info"]',
            infoEmpty: '@SharedLocalizer["Info_Empty"]',
            infoFiltered: '@SharedLocalizer["Info_Filtered"]',
            zeroRecords: '@SharedLocalizer["Zero_Records"]'
        };

        // Tüm öğrencileri global olarak saklama
        var allStudentsData = [];
        var filteredStudentsData = [];
        var currentPageSize = @currentPageSize;
        var currentPage = 1;

        // Sayfa yüklendiğinde tüm öğrenci verilerini al
        $(document).ready(function () {
            loadAllStudents();

            // Scroll hareket ettirildiğinde option menüsünü kapatır.
            $(window).on('scroll', function () {
                $('.dropdown-menu.show').removeClass('show');
                $('.dropdown-toggle[aria-expanded="true"]').attr('aria-expanded', 'false');
            });

            $('#pageSizeDropdown').val(currentPageSize);

            $('#pageSizeDropdown').change(function () {
                currentPageSize = parseInt($(this).val());
                currentPage = 1;
                updateTable();
            });
        });

        function loadAllStudents() {
            $.ajax({
                url: '@Url.Action("GetAllStudents", "Student")',
                type: 'GET',
                success: function (data) {
                    allStudentsData = data;
                    filteredStudentsData = [...allStudentsData];
                    updateTable();
                },
                error: function () {
                    console.error('Öğrenci verileri yüklenirken hata oluştu');
                }
            });
        }

        function filterTable() {
            var firstName = document.getElementById("FirstName").value.toLowerCase();
            var lastName = document.getElementById("LastName").value.toLowerCase();
            var email = document.getElementById("Email").value.toLowerCase();

            // Tüm öğrenciler içinde filtreleme yap
            filteredStudentsData = allStudentsData.filter(function(student) {
                return student.firstName.toLowerCase().includes(firstName) &&
                       student.lastName.toLowerCase().includes(lastName) &&
                       student.email.toLowerCase().includes(email);
            });

            currentPage = 1; // Filtreleme sonrası ilk sayfaya dön
            updateTable();
        }

        function updateTable() {
            var tbody = document.getElementById("studentsTableBody");
            var totalRecords = filteredStudentsData.length;

            // Sayfalama hesaplamaları
            var startIndex = (currentPage - 1) * currentPageSize;
            var endIndex = Math.min(startIndex + currentPageSize, totalRecords);
            var pageData = filteredStudentsData.slice(startIndex, endIndex);

            // Tablo içeriğini temizle
            tbody.innerHTML = '';

            if (pageData.length === 0) {
                tbody.innerHTML = `
                    <tr>
                        <td colspan="5" class="text-center py-10">
                            <div class="d-flex flex-column align-items-center">
                                <span class="text-gray-500 fs-6 fw-bold">@SharedLocalizer["No_Records_Found"]</span>
                            </div>
                        </td>
                    </tr>`;
            } else {
                pageData.forEach(function(student) {
                    var imageHtml = '';
                    if (student.newImage && student.newImage.length > 0) {
                        var imageSrc = "data:image/png;base64," + student.newImage;
                        imageHtml = `
                            <div class="symbol symbol-circle symbol-40px overflow-hidden me-3">
                                <div class="symbol-label">
                                    <img src="${imageSrc}" name="Image" alt="Student Image" class="w-100" />
                                </div>
                            </div>`;
                    } else {
                        imageHtml = `
                            <div class="symbol symbol-circle symbol-40px overflow-hidden me-3 text-center">
                                <div class="symbol-label">
                                    <img src="/images/blank-profile-picture.png" alt="Profil Fotoğrafı Bulunamadı!" class="w-100" />
                                </div>
                            </div>`;
                    }

                    var row = `
                        <tr style="height: 50px;" data-student-id="${student.id}">
                            <td>${imageHtml}</td>
                            <td style="padding: 5px 0;" class="student-firstname">${student.firstName}</td>
                            <td style="padding: 5px 0;" class="student-lastname">${student.lastName}</td>
                            <td style="padding: 5px 0;" class="student-email">${student.email}</td>
                            <td class="text-end" style="padding: 5px 0;">
                                <div class="dropdown">
                                    <button class="btn btn-light btn-active-light-primary btn-sm dropdown-toggle" type="button" data-bs-toggle="dropdown">
                                        @SharedLocalizer["Options"]
                                    </button>
                                    <ul class="dropdown-menu dropdown-menu-end menu-column menu-rounded menu-gray-600 menu-state-bg-light-primary fw-bold fs-7 w-125px py-4">
                                        <li class="menu-item px-3">
                                            <a href="@Url.Action("Details")?id=${student.id}&page=${currentPage}&pageSize=${currentPageSize}" class="menu-link px-3">@SharedLocalizer["Details"]</a>
                                        </li>
                                        <li class="menu-item px-3">
                                            <a onclick="loadStudentData('${student.id}')" data-student-id="${student.id}" data-bs-toggle="modal" data-bs-target="#kt_modal_update_student" class="menu-link px-3">@SharedLocalizer["Update"]</a>
                                        </li>
                                        <li class="menu-item px-3">
                                            <a href="@Url.Action("StudentSentMails")?email=${student.email}" class="menu-link px-3">@SharedLocalizer["Email_Content"]</a>
                                        </li>
                                    </ul>
                                </div>
                            </td>
                        </tr>`;
                    tbody.innerHTML += row;
                });
            }

            // Sayfa bilgilerini güncelle
            updatePaginationInfo(totalRecords, startIndex + 1, endIndex);
            updatePagination(totalRecords);
        }

        function updatePaginationInfo(total, from, to) {
            document.getElementById('totalCount').textContent = total;
            document.getElementById('fromCount').textContent = total > 0 ? from : 0;
            document.getElementById('toCount').textContent = total > 0 ? to : 0;
        }

        function updatePagination(totalRecords) {
            var totalPages = Math.ceil(totalRecords / currentPageSize);
            var paginationContainer = document.getElementById('paginationContainer');

            if (totalPages <= 1) {
                paginationContainer.innerHTML = '';
                return;
            }

            var paginationHtml = '<div class="d-flex justify-content-center"><ul class="pagination justify-content-center">';

            // İlk sayfa
            if (currentPage > 1) {
                paginationHtml += `<li class="page-item"><a class="page-link" onclick="changePage(${currentPage - 1})">‹</a></li>`;
            }

            // Sayfa numaraları
            var startPage = Math.max(1, currentPage - 2);
            var endPage = Math.min(totalPages, currentPage + 2);

            for (var i = startPage; i <= endPage; i++) {
                var activeClass = i === currentPage ? 'active' : '';
                paginationHtml += `<li class="page-item ${activeClass}"><a class="page-link" onclick="changePage(${i})">${i}</a></li>`;
            }

            // Son sayfa
            if (currentPage < totalPages) {
                paginationHtml += `<li class="page-item"><a class="page-link" onclick="changePage(${currentPage + 1})">›</a></li>`;
            }

            paginationHtml += '</ul></div>';
            paginationContainer.innerHTML = paginationHtml;
        }

        function changePage(page) {
            currentPage = page;
            updateTable();
        }

    </script>

}