@model AdminClassroomUpdateVM

@{
    ViewData["Title"] = SharedLocalizer["Update_Classroom"];
}

<div class="modal fade" id="kt_modal_update_classroom" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered mw-1000px">
        <div class="modal-content">
            <div class="modal-header" id="kt_modal_update_user_header">
                <h2 class="fw-bolder">@SharedLocalizer["Update"]</h2>
                <div class="btn btn-icon btn-sm btn-active-icon-primary" data-kt-users-modal-action="closes">
                    <span class="svg-icon svg-icon-1">
                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none">
                            <rect opacity="0.5" x="6" y="17.3137" width="16" height="2" rx="1" transform="rotate(-45 6 17.3137)" fill="currentColor" />
                            <rect x="7.41422" y="6" width="16" height="2" rx="1" transform="rotate(45 7.41422 6)" fill="currentColor" />
                        </svg>
                    </span>
                </div>
            </div>
            <div class="modal-body scroll-y mx-1 mx-xl-1 my-7">
                <form asp-area="Admin" asp-controller="Classroom" asp-action="Update" id="kt_modal_update_classroom_form" class="form" enctype="multipart/form-data">
                    <input type="hidden" asp-for="Id" />
                    <div class="d-flex flex-column scroll-y me-n7 pe-7" id="kt_modal_update_user_scroll" data-kt-scroll="true" data-kt-scroll-activate="{default: false, lg: true}" data-kt-scroll-max-height="auto" data-kt-scroll-dependencies="#kt_modal_update_user_header" data-kt-scroll-wrappers="#kt_modal_update_user_scroll" data-kt-scroll-offset="300px">
                        <div class="row">
                            <div class="col-md-6">
                                <!-- Sınav Adı (Name) -->
                                <!-- Sınav Adı (Name) -->
                                <div class="fv-row form-floating mb-7">
                                    <input asp-for="Name" class="form-control form-control-solid mb-3 mb-lg-0" placeholder="@SharedLocalizer["Classroom_Name"]" />
                                    <label for="Name">
                                        @SharedLocalizer["Classroom_Name"] <span style="color:red">*</span>
                                    </label>
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>



                                <!-- Başlangıç Tarihi -->
                                <div class="fv-row form-floating mb-7">
                                    <input asp-for="OpeningDate" type="date" class="form-control form-control-solid mb-3 mb-lg-0" id="OpeningDate" />
                                    <label asp-for="OpeningDate" class="required fw-bold fs-6 mb-2"></label>
                                    <span asp-validation-for="OpeningDate" class="text-danger"></span>
                                </div>

                                <!-- Grup Tipi -->
                                <div class="fv-row form-floating mb-7">
                                    <select asp-for="GroupTypeId" asp-items="@ViewBag.GroupTypeList" class="form-select form-select-sm form-select-solid">
                                        <option value="" disabled selected>@SharedLocalizer["Choose"]</option>
                                    </select>
                                    <label asp-for="GroupTypeId" class="required fw-bold fs-6 mb-2"></label>
                                    <span asp-validation-for="GroupTypeId" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <!-- Şube -->
                                <div class="fv-row form-floating mb-7">
                                    <select asp-for="BranchId" asp-items="@ViewBag.BranchList" class="form-select form-select-sm form-select-solid">
                                        <option value="" disabled selected>@SharedLocalizer["Choose"]</option>
                                    </select>
                                    <label asp-for="BranchId" class="required fw-bold fs-6 mb-2"></label>
                                    <span asp-validation-for="BranchId" class="text-danger"></span>
                                </div>

                                <!-- Bitiş Tarihi -->
                                <div class="fv-row form-floating mb-7">
                                    <input asp-for="ClosedDate" type="date" asp-format="{0:dd/MM/yyyy}" class="form-control form-control-solid mb-3 mb-lg-0" id="ClosedDate" />
                                    <label asp-for="ClosedDate" class="required fw-bold fs-6 mb-2"></label>
                                    <span asp-validation-for="ClosedDate" class="text-danger"></span>
                                </div>

                                <!-- Ürün Seçimi -->
                                <div class="fv-row form-floating mb-7">
                                    <label asp-for="ProductIds" class="required fw-bold fs-6 mb-2 "></label>
                                    <span asp-validation-for="ProductIds" class="text-danger"></span>
                                    <select class="form-select form-select-solid" id="ProductsIds" data-control="select2" data-close-on-select="false" data-placeholder="@SharedLocalizer["Choose_Product"]" data-allow-clear="true" multiple="multiple" asp-items="@ViewBag.ProductList" asp-for="ProductIds">
                                    </select>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="text-end pt-15">
                        <button type="reset" class="btn btn-secondary me-3" data-kt-users-modal-action="cancels">@SharedLocalizer["Back_List"]</button>
                        <button type="submit" class="btn btn-primary" data-kt-users-modal-action="submits">
                            <span class="indicator-label">@SharedLocalizer["Save"]</span>
                            <span class="indicator-progress">
                                @SharedLocalizer["Please_Wait"]
                                <span class="spinner-border spinner-border-sm align-middle ms-2"></span>
                            </span>
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>

<script>
    $(document).ready(function () {
        $('#kt_modal_update_classroom').on('show.bs.modal', function (e) {
            var classroomId = $(e.relatedTarget).data('id');
            loadClassroomData(classroomId);
        });
    });
</script>
