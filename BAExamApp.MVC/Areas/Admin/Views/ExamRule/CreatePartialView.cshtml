@model AdminExamRuleCreateVM

@{
    ViewData["Title"] = SharedLocalizer["Create_New_ExamRule"];
}

<div class="modal fade" id="createExamRuleModal" tabindex="-1" aria-labelledby="ExamRuleAdd" aria-hidden="true">
    <div class="modal-dialog modal-xl modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">@SharedLocalizer["Exam_Rule"]</h5>
                <button type="button" class="btn btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form asp-controller="ExamRule" asp-action="Create" class="form" id="create-exam-rule" enctype="multipart/form-data">
                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-floating mb-6">
                                <input asp-for="Name" type="text" class="form-control" placeholder="name@example.com" />
                                <label asp-for="Name" class="col-sm-4 col-form-label col-form-label-lg required" for="floatingInput"></label>
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-floating mb-6">
                                <select class="form-select" asp-for="ExamType" asp-items="@ViewBag.ExamTypes" onchange="onExamTypeChange()">
                                    <option value="" disabled selected>@SharedLocalizer["Choose"]</option>
                                </select>
                                <label class="col-sm-4 col-form-label col-form-label-lg required" asp-for="ExamType">@SharedLocalizer["Exam_Type"]</label>
                                <span class="text-danger" id="examTypeValidation"></span>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="form-floating mb-6">
                                <textarea asp-for="Description" type="text" class="form-control" placeholder="name@example.com"></textarea>
                                <label asp-for="Description" class="col-sm-4 col-form-label col-form-label-lg required" for="floatingInput"></label>
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>
                            <hr class="my-4" style="border: 1px solid #000;">
                        </div>

                        <div class="row ">
                            <div class="mb-3 col-md-4 ">
                                <div class="form-floating col-sm-12 ">
                                    <select asp-for="ProductId" asp-items="@ViewBag.ProductList" class="form-select" onchange="onProductChange()">
                                        <option value="" disabled selected>@SharedLocalizer["Choose"]</option>
                                    </select>
                                    <label asp-for="ProductId" class="col-sm-4 col-form-label col-form-label-lg required">@SharedLocalizer["Product"]</label>
                                    <span class="text-danger" id="productValidation"></span>
                                </div>
                            </div>
                            <div class="mb-3 col-md-4 ">
                                <div class="form-floating col-sm-12">
                                    <select asp-items="@ViewBag.SubjectList" class="form-select" asp-for="SubjectId" onchange="onSubjectChange()">
                                        <option value="" disabled selected>@SharedLocalizer["Choose"]</option>
                                    </select>
                                    <label class="col-sm-4 col-form-label col-form-label-lg required" asp-for="SubjectId">@SharedLocalizer["Subject"]</label>
                                    <span class="text-danger" id="subjectValidation"></span>
                                </div>
                            </div>
                            <div class="mb-3 col-md-4 ">
                                <div class="form-floating col-sm-12">
                                    <select asp-for="SubtopicId" asp-items="@ViewBag.SubtopicList" class="form-select" id="SubtopicId" onchange="onSubtopicChange()" required>
                                        <option value="" disabled selected>@SharedLocalizer["Choose"]</option>
                                    </select>
                                    <label class="col-sm-4 col-form-label col-form-label-lg required" for="SubtopicId">@SharedLocalizer["Subtopic"]</label>
                                    <span class="text-danger" id="subtopicValidation"></span>
                                </div>
                            </div>
                        </div>

                        <input class="form-control" name="examRuleSubjects" id="examRuleSubjects" hidden />
                        <div class="card mb-3 border col-md-8 offset-md-2" id="questionTableContainer" style="display: none;">
                            <div class="card-body p-2">
                                <table class="table table-sm">
                                    <thead>
                                        <tr>
                                            <th style="width: 33% !important; font-weight: bold ;text-align: center">@SharedLocalizer["Question_Type"]</th>
                                            <th style="width: 33% !important; font-weight: bold; text-align: center">@SharedLocalizer["Question_Difficulty"]</th>
                                            <th style="width: 33% !important; font-weight: bold; text-align: center">@SharedLocalizer["Question_Count"]</th>
                                        </tr>
                                    </thead>
                                    <tbody id="questionTableContent">
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        <div class="row" id="questionSelection">
                            <div class="mb-3 col-md-4 ">
                                <div class="form-floating col-sm-12">
                                    <select class="form-select" asp-for="QuestionType" asp-items=" @ViewBag.QuestionTypeList" required>
                                        <option value="" disabled selected>@SharedLocalizer["Choose"]</option>
                                    </select>
                                    <label asp-for="QuestionType" class="col-form-label col-form-label-lg required" for="QuestionType">@SharedLocalizer["Question_Type"]</label>

                                    <span class="text-danger" id="questionTypeValidation"></span>
                                </div>
                            </div>
                            <div class="mb-3 col-md-4 ">
                                <div class="form-floating col-sm-12">
                                    <select class="form-select" asp-for="QuestionDifficultyId" required>
                                        <option value="" disabled selected>@SharedLocalizer["Choose"]</option>
                                    </select>
                                    <label asp-for="QuestionDifficultyId" class="col-form-label col-form-label-lg required" for="QuestionDifficultyId">@SharedLocalizer["Question_Difficulty"]</label>
                                    <span class="text-danger" id="questionDifficultyValidation"></span>
                                </div>
                            </div>

                            <div class="mb-3 col-md-4 ">
                                <div class="form-floating">
                                    <input class="form-control" type="number" asp-for="QuestionCount" required />
                                    <label for="QuestionCount" class="required" style="text-decoration: none;">@SharedLocalizer["Question_Count"]</label>
                                    <span class="text-danger" id="questionCountValidation"></span>
                                </div>

                            </div>
                        </div>

                        <div class="col-md-12">
                            <div class="d-flex justify-content-end mb-3">
                                <button class="btn btn-sm btn-primary col-2" type="button" onclick="addNewRule()">@SharedLocalizer["Add_New_Rule"]</button>
                            </div>
                        </div>
                        <span class="text-danger" id="sameRuleValidation" hidden>@SharedLocalizer["Same_Rule_Exists"]</span>
                        <span class="text-danger" id="sufficientQuestionValidation" hidden>@SharedLocalizer["Adequate_Question_Validation"]</span>

                        <span class="text-danger" id="noRuleValidation" hidden> </span>

                        <span class="text-danger" id="numberQuestionValidation" hidden>@SharedLocalizer["Number_Question_Validation"]</span>
                    </div>
                    <div class="col-md-12">
                        <table class="table table-bordered table-striped">
                            <thead table-light>
                                <tr>
                                    <th class="col-sm-2" style="font-weight:bold">@SharedLocalizer["Subject"]</th>
                                    <th class="col-sm-2" style="font-weight:bold">@SharedLocalizer["Subtopic"]</th>
                                    <th class="col-sm-2" style="font-weight:bold">@SharedLocalizer["Exam_Type"]</th>
                                    <th class="col-sm-2" style="font-weight:bold">@SharedLocalizer["Question_Type"]</th>
                                    <th class="col-sm-2" style="font-weight:bold">@SharedLocalizer["Question_Difficulty"]</th>
                                    <th class="col-sm-2" style="font-weight:bold">@SharedLocalizer["Question_Count"]</th>
                                    <th class="col-sm-2" style="font-weight:bold">@SharedLocalizer["Actions"]</th>
                                </tr>
                            </thead>
                            <tbody id="tableContent">
                            </tbody>
                        </table>
                    </div>

                    <!-- Toplam Question Count -->
                    <div id="totalQuestionCount" class="text-right" style="font-weight:bold; border-top:solid 1px;">
                        Total @SharedLocalizer["Question_Counts"]: <span id="totalCount">0</span>
                    </div>

                </div>
                <div class="modal-footer">
                    <a class="btn btn-secondary align-self-center ms-2" asp-controller="ExamRule" asp-action="Index">@SharedLocalizer["Back_List"]</a>
                    <button class="btn btn-success" id="saveButton" type="submit">@SharedLocalizer["Save"]</button>
                </div>
            </form>
        </div>
    </div>
</div>


<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
<script src="~/js/jquery.min.js"></script>
<script src="~/js/select2.js"></script>
<script src="~/js/exam-rule-create.js"></script>
<script>
    var localizedTexts = { unsavedChangesTitle: '@SharedLocalizer["Unsaved_Changes_Title"]',
                           unsavedChangesText: '@SharedLocalizer["Unsaved_Changes_Text"]',
                           confirmButtonText: '@SharedLocalizer["Yes_Leave"]',
                           cancelButtonText: '@SharedLocalizer["No_Stay"]',
                           formSubmittedText: '@SharedLocalizer["Form_Submitted_Text"]',
                           okButtonText: '@SharedLocalizer["Ok_Button_Text"]',
                           questionTypeValidationText: '@SharedLocalizer["Choose_Question_Type"]',
                           productValidationText: '@SharedLocalizer["Product_Update_Name_Validation"]',
                           questionDifficultyValidationText: '@SharedLocalizer["Choose_Question_Difficulty"]',
                           numberOfQuestionValidationText: '@SharedLocalizer["Choose_Number_Of_Question"]',
                           subjectValidationText: '@SharedLocalizer["Choose_Question_Topic"]',
                           chooseSubtopicValidationText: '@SharedLocalizer["Choose_Subtopic"]',
                           examTypeRequired : '@SharedLocalizer["Exam_Type_Required"]',
                           addAtLeastOneRule : '@SharedLocalizer["Add_Exam_Rule_Subject"]',
    };
</script>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        const formElements = document.querySelectorAll(
            '#create-exam-rule input,#create-exam-rule select,#create-exam-rule textarea'
        );

        function checkAndToggleStar(element) {
            const parentDiv = element.closest('.form-floating');
            // console.log(parentDiv);
            if (!parentDiv) return;

            const label = parentDiv.querySelector('label');
            if (!label) return;
            // console.log("Label önce:", label);
            if (element.value.trim() === "") {
                label.classList.add("required");
                // console.log("Label sonra:", label);
            } else {
                label.classList.remove("required");
                // console.log("Label sonra:", label);
            }
        }

        formElements.forEach(element => {

            if (element.tagName.toLowerCase() === 'select') {
                $(element).on('change', function () {
                    checkAndToggleStar(this);
                });
            }
            else {
                element.addEventListener('input', function () {
                    // console.log("Element" , element);
                    checkAndToggleStar(element);
                });

                element.addEventListener('change', function () {
                    // console.log("Değişti");
                    checkAndToggleStar(element);
                });
            }

        });

    });

</script>

<script>
    //Form kapandıktan sonra gerekli yerleri sıfırlama
    document.addEventListener("DOMContentLoaded", function () {
        const form = document.getElementById('create-exam-rule');


        $('#createExamRuleModal').on('hidden.bs.modal', function () {

            form.reset();
            document.getElementById('questionTableContainer').style.display = 'none';
            form.querySelectorAll('label').forEach(label => {
                label.classList.add('required');
            });

        });
    });
</script>